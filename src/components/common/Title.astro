---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"h1"> {
  type: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  bg?: boolean;
  slot?: string;
}

const { type: H, bg = true, class: classNames, ...props } = Astro.props;

const sizes = {
  h1: "text-4xl md:text-5xl lg:text-7xl xl:text-9xl",
  h2: "text-3xl md:text-4xl lg:text-5xl xl:text-8xl",
  h3: "text-3xl",
  h4: "text-2xl",
  h5: "text-xl",
  h6: "text-lg",
};
---

<H
  class:list={[
    sizes[H],
    bg && "title__bg",
    "title text[#eee7e2] uppercase",
    classNames,
  ]}
  {...props}
>
  <slot />
</H>

<style>
  .title {
    font-family: ND_LOGOS_REGULAR;
  }
  .title.title__bg {
    background: -webkit-linear-gradient(#f9e976, #c7881e);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
