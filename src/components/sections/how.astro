---
import Button from "../common/Button.astro";
import Card from "../common/Card.astro";
import Title from "../common/Title.astro";
---

<section
  id="how"
  class="container p-4 lg:p-16 lg:pt-20 mb-20 relative mx-auto flex flex-col items-center gap-16 w-full min-h-full text-center snap-start"
  {...Astro.props}
>
  <div class="w-full flex justify-between">
    <Title type="h2" class="self-start">Cómo?</Title>
    <Button href="#" target="_blank" class="self-center hidden lg:flex">
      Tickets
    </Button>
  </div>
  <Card
    title="Presencial"
    link="#"
    linkText="Ver Ubicación"
    bgImage="/assets/images/conf.jpeg"
  >
    <ul class="list-disc text-left">
      <li>Conecta con exponentes y Devs estelares</li>
      <li>Obtén Swag especial de AchiraConf</li>
      <li>Encuentra tu próxima empresa :)</li>
    </ul>
  </Card>
  <Card
    title="Online"
    link="#"
    linkText="twitch.tv/achiraconf"
    bgImage="/assets/images/online.jpeg"
  >
    <ul class="list-disc text-left">
      <li>Desde la comodidad de tu sillón</li>
      <li>Chatea con otros Devs</li>
    </ul>
  </Card>
  <Button href="#" target="_blank" class="self-center lg:hidden">
    Tickets
  </Button>
</section>
